/* Combobox Styling */
QComboBox {
    padding: 12px;
    border-radius: 8px;
    border: 1px solid #ccc;
    background-color: #fff;
    font-size: 14px;  /* Match font size with input fields */
    font-weight: 500;
}

QComboBox:editable {
    background-color: #fff;
}

QComboBox QAbstractItemView {
    background-color: #fff;
    border: 1px solid #ccc;
}

/* Input Fields */
QLineEdit {
    padding: 12px;
    font-style:bold;
    border-radius: 8px;
    border: 1px solid #ddd;
    background-color: #fafafa;
    font-size: 14px;  /* Match font size with combo boxes */
    font-weight: 500;
}

QLineEdit:focus {
    border-color: #007bff; /* Blue border on focus */
    box-shadow: 0px 0px 10px rgba(0, 123, 255, 0.3); /* Soft blue glow */
}

QLineEdit:disabled {
    background-color: #f2f2f2;
}

/* Search Input */
#search_input {
    padding: 12px;
    border-radius: 8px;
    border: 1px solid #ccc;
    font-size: 14px;  /* Match font size with combo boxes */
    width: 250px;
}

/* Custom Scrollbar for Tables */
QScrollBar:horizontal, QScrollBar:vertical {
    border: none;
    background: #f1f1f1;
    height: 10px;
    width: 10px;
    border-radius: 5px;
}

QScrollBar::handle:horizontal, QScrollBar::handle:vertical {
    background: #bbb;
    border-radius: 5px;
    min-height: 20px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover, QScrollBar::handle:vertical:hover {
    background: #888;
}

/* Modal Dialogs */
QDialog {
    background-color: #ffffff;
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
}

QDialog QPushButton {
    background-color: #4CAF50;
    color: white;
    border-radius: 8px;
    padding: 12px 20px;
    border: none;
}

QDialog QPushButton:hover {
    background-color: #45a049;
}
