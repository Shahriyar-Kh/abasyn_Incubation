/* Main Window */
#main_window {
    background-color:rgba(250, 250, 250, 0.52); /* Soft background color */
    font-family: Arial, sans-serif;
    font-size: 16px;
    color: #333; /* Dark text for readability */
    border-radius: 10px;
    padding: 20px;
}

/* Frame1 (Product Details and CRUD buttons) */
#frame1 {
    background-color: #ffffff;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 12px;
    margin-right: 20px;
    box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
    width: 320px;
}

/* Frame2 (Product Table) */
#frame2 {
    background-color: #ffffff;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 12px;
    flex-grow: 1;
    box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
}

/* Frame3 (Search Area) */
#frame3 {
    background-color: #ffffff;
    padding: 20px;
    border-radius: 12px;
    margin-bottom: 20px;
    display: flex;
    justify-content: space-between;
    box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
}

/* Product Table */
#product_table {
    border: 1px solid #ddd;
    border-radius: 10px;
    background-color: #fff;
    font-size: 14px;
    font-weight: 500;
    color: #555;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1); /* Enhanced shadow */
}

/* Table Header */
#product_table QHeaderView::section {
    background-color:rgb(25, 36, 52);
    color: white;
    padding: 10px;
    font-weight: bold;
    border: none;
    border-radius: 8px;
    text-align: center;
}

/* Table Row */
#product_table QTableWidgetItem {
    padding: 8px;
    font-size: 13px;
    text-align: center;
}

/* Table Row Hover Effect */
#product_table QTableWidgetItem:hover {
    background-color: #f1f1f1;
}

/* Buttons */
#add_button {
    background-color: #4CAF50; /* Fresh Green */
    color: white;
    padding: 14px 20px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    font-weight: bold;
    box-shadow: 0px 4px 6px rgba(0, 128, 0, 0.2);
    transition: all 0.3s ease;
}

#add_button:hover {
    background-color: #45a049;
    box-shadow: 0px 6px 10px rgba(0, 128, 0, 0.3); /* Enhanced hover effect */
    transform: translateY(-2px);
}

#update_button {
